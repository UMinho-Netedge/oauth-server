FROM alpine:3.17.1

RUN apk update
RUN apk add --no-cache python3 py3-pip

# Instalamos os m√≥dulos
RUN pip install requests pyjwt cryptography flask python2-secrets pymongo jwcrypto oauthlib 

WORKDIR /app
#criamos a pasta template
#RUN mkdir templates
# Copiamos o resto
COPY openid.py .
COPY credentials.json .
# Expomos a porta
EXPOSE 5000
# Colocamos o servidor a correr
CMD [ "python", "openid.py" ]

